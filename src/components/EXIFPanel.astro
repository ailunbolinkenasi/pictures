<script>
  // å®¢æˆ·ç«¯è„šæœ¬ï¼šå¤„ç†å…³é—­é€»è¾‘
  const overlay = document.getElementById('exif-panel-overlay');
  const container = document.getElementById('exif-panel-container');
  const closeBtns = document.querySelectorAll('[data-action="close-exif"]');

  function closePanel() {
    if (!overlay) return;

    // æ·»åŠ å…³é—­åŠ¨ç”»ç±»
    overlay.style.opacity = '0';
    if (container) {
      container.style.transform = 'translate3d(60px, 0, 0)';

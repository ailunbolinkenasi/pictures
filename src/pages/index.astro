<script>
  import { Fancybox } from "@fancyapps/ui";
  // @ts-ignore
  import justifiedLayout from "justified-layout";

  // ÁªëÂÆö Fancybox
  (Fancybox as any).bind('[data-fancybox="gallery"]', {
    preload: 2, // ÂáèÂ∞ëÈ¢ÑÂä†ËΩΩÊï∞Èáè‰ª•ËäÇÁúÅÂ∏¶ÂÆΩ
    Thumbs: { autoStart: false },
    Toolbar: {
      display: { right: ["close"] },
    },
    Images: { 
      fit: "contain",
      zoom: true,
      Panzoom: { maxScale: 2 },
      protected: true, // Èò≤Ê≠¢Êüê‰∫õ WebP Ë¢´ÈîôËØØÂ§ÑÁêÜ
    },
    Caption: {
      type: "html",
    },
    // ÈîôËØØÂ§ÑÁêÜÊú¨Âú∞Âåñ
    l10n: {
      ERROR: "ÂõæÁâáÂä†ËΩΩÂ§±Ë¥•ÔºåËØ∑Ê£ÄÊü•ÁΩëÁªúËøûÊé•",
    },
    dragToClose: true,
    animated: true,
    showClass: "f-zoomInUp",
    hideClass: "f-fadeOut",
  });

  // Justified Grid Ê∏≤Êüì‰∏éÂä®ÁîªÈÄªËæë
  document.addEventListener('DOMContentLoaded', () => {
    const loadingScreen = document.getElementById('loading-screen') as HTMLElement;
    const container = document.getElementById('justified-grid') as HTMLElement | null;
    const items = container ? Array.from(container.querySelectorAll('.jg-item')) as HTMLElement[] : [];

    // ÂõæÁâá‰∫§ÈîôËøõÂÖ•Âä®Áîª
    let visibleCount = 0;
    const io = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          const target = entry.target as HTMLElement;
          const delay = Math.min(visibleCount * 60, 800); // ÊúÄÂ§ßÂª∂Ëøü 800ms
          target.style.transitionDelay = `${delay}ms`;

          // ÂÖàÊâßË°åÊ®°Á≥äÂä®Áîª
          requestAnimationFrame(() => {
            target.classList.add('visible');
          });

          // Âª∂ËøüÂêéÁßªÈô§Ê®°Á≥äÊïàÊûú
          setTimeout(() => {
            target.classList.add('sharp');
          }, delay + 400);

          visibleCount++;
          io.unobserve(target);
        }
      });
    },
    {
      threshold: 0.1,
      rootMargin: "50px"
    });

    function targetRowHeightFor(width: number) {
      if (width < 640) return 180;
      if (width < 1024) return 220;
      return 260;
    }
    function boxSpacingFor(width: number) {
      if (width < 640) return 8;
      if (width < 1024) return 12;
      return 16;
    }

    function renderLayout() {
      if (!container) return;
      const width = container.clientWidth;
      const aspectRatios = items.map(el => {
        const v = parseFloat(el.dataset.ar || "1");
        return Number.isFinite(v) && v > 0 ? v : 1;
      });

      const layout = justifiedLayout(aspectRatios, {
        containerWidth: width,
        targetRowHeight: targetRowHeightFor(width),
        boxSpacing: boxSpacingFor(width),
        containerPadding: 0,
      } as any);

      container.style.height = `${layout.containerHeight}px`;
      layout.boxes.forEach((b: any, i: number) => {
        const el = items[i];
        el.style.position = 'absolute';
        el.style.left = `${b.left}px`;
        el.style.top = `${b.top}px`;
        el.style.width = `${b.width}px`;
        el.style.height = `${b.height}px`;
      });

      // ÈáçÊñ∞ÁªëÂÆöËøõÂÖ•ËßÜÂè£Âä®Áîª
      items.forEach(el => io.observe(el));

      // Ê∑°Âá∫Âä†ËΩΩÈÅÆÁΩ©
      if (loadingScreen) {
        requestAnimationFrame(() => {
          loadingScreen.classList.add('fade-out');
          // Âä®ÁîªÂÆåÊàêÂêéÁßªÈô§ÂÖÉÁ¥†
          setTimeout(() => {
            loadingScreen.style.display = 'none';
          }, 600);
        });
      }
    }

    let raf = 0;
    function onResize() {
      cancelAnimationFrame(raf);
      raf = requestAnimationFrame(renderLayout);
    }

    window.addEventListener('resize', onResize, { passive: true });
    renderLayout();
  });
</script>

